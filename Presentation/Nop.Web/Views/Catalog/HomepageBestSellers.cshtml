@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    var ProdCount = 5;
    <div class="productDisplayBlock pull-left">
        <h3 class="productHeading pull-left span10 noMarginLeft">
            @T("Bestsellers")
        </h3>
    </div>
    <div class="span10 noMarginLeft pull-right bestSellers">
        <ul class="thumbnails noMarginLeft productBlock">
        @if (Model.Count() < 5)
        {
            ProdCount = Model.Count();
        }
        
        @for (var i = 0;i < ProdCount;i++)
        {
            <li class="span2 noMarginLeft">
                @Html.Partial("_ProductBox", Model[i])
            </li>
               
        }
        </ul>
    </div>
}